<div class="newsItemCont col-md-6 col-lg-6 col-sm-6 col-xs-12">
    <div class="newsItem transparent">
        <div class="newsTitle">
            <div class="newsAuthor">
                <img class="newsAuthorImg" src="style/nophoto.png">
                <span class="hidden-xs">Новость создал </span>
                <span class="newsAuthorName">{login}</span>
                <span class="newsTimeCreate">{timestamp}</span>
            </div>

            <i class="newsPrivateLabel label label-xs">N/A</i>

            <div class="newsApproved text-right hidden-xs hidden">
                <span>Принято: </span>
                <img class="newsApproverImg" src="style/nophoto.png">
                <span class="newsApproverName">MSN</span>
                <span class="newsTimeApprove">22.04.2017 в 02:34</span>
            </div>

            <div class="btnApproved text-right hidden">
                <button class="btnAddNews btn btn-success btn-xs disabled">Принимаю</button>
            </div>
        </div>
        <div class="newsBody">
            <div class="row">
                <div class="col-md-4 col-xs-12 newsLeft">
                    <a class="newsFancyLink" href="#">
                        <img src="style/nophoto.png" class="newsImg transparent">
                    </a>
                    <div class="newsImgDesc"></div>
                </div>
                <div class="col-md-8 col-xs-12 newsRight">
                    <h2 class="newsTitleH">{newsTitle}</h2>
                    <span class="newsText">{newsText}</span>
                </div>
            </div>
        </div>
        <div class="newsFooter"></div>
    </div>
</div>